---
/** @todo recipe works well but components with recipe like below don't work well */
import { cx } from "@my-monorepo/ui-lib/css";
import {
  buttonRecipe,
  type ButtonRecipeVariantProps,
} from "@my-monorepo/ui-lib/recipes";
import type { HTMLAttributes } from "astro/types";

export interface Props
  extends HTMLAttributes<"button">,
    ButtonRecipeVariantProps {
  className?: string;
}

const { className, visual, size, shape, ...props } = Astro.props;
---

<button
  data-scope="shadcn-button"
  data-part="root"
  class={cx(className, buttonRecipe({ size, visual, shape }))}
  {...props}
>
  <slot />
</button>
